<%= simple_form_for(@song) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :artist %>
    <%= f.input :url %>
    <%= f.input :provider, :as => :hidden %>
    <%= f.input :embed_code, :input_html => { :cols => 60, :rows => 3 }, :placeholder => "Paste embed code here" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
