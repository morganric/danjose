<%= simple_form_for(@guess) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :artist %>
    <%= f.input :url, :placeholder => "youtube, soundcloud etc." %>
    <%= f.input :provider,  :as => :hidden %>
    <%= f.input :embed_code, :as => :hidden %>
    <%= f.input :correct,  :as => :hidden  %>
    <% if current_user %>
    <%= f.input :user_id,  :as => :hidden , :input_html => {:value => current_user.id } %>
    <% end %>
    <%= f.input :post_id,  :as => :hidden ,  :input_html => {:value => @post.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value => "Guess!" %>
  </div>
<% end %>
