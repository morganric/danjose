<%= link_to 'Add New Song', new_song_path, :class => "btn btn-large pull-right  "%>
<h1>Songs</h1>


<% @songs.each do |song| %>

    <h2><%= link_to song.title, song %> by 
    <%= song.artist %></h2>
    <p>
        <%= raw song.embed_code %>
    </p>
    <p><%= link_to "via #{song.provider}", song.url %></p>

<% if can? :manage, song %>
    <%= link_to 'Show', song %>
    <%= link_to 'Edit', edit_song_path(song) %>
    <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>    

<% end %>



