<% if can? :manage, @posts %>
  <%= link_to 'New Post', new_post_path, :class => "btn btn-large pull-right" %>
<% end %>

<h1>Dan Jose</h1> 
<ul>
<% @posts.each do |post| %>
<li>
  <h2><%= link_to post.title, post %></h2>

  <%#= link_to 'thumb', post.image_url(:thumb) %>
  <p>  
    <%= link_to image_tag(post.image_url(:thumb)), post %> 
    <%= truncate(post.copy) %>
  <p>

  <% if can? :manage, post %>
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</li>
<% end %>
</ul>


