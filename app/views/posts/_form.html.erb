<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :title %>
      <%= f.label :image %>
      <%= f.file_field :image %>
    <p>
      <%= f.input :copy, :input_html => { :cols => 60, :rows => 3 } %>
    </p>

    <%= f.association :songs , :label => "Select Song #{link_to 'add song', new_song_path, :class => 'btn btn-mini'}" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript">
  $('#post_song_ids').removeClass('optional').removeAttr("multiple").removeAttr("size");

</script>